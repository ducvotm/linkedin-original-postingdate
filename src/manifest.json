{
  "manifest_version": 3,
  "name": "LinkedIn Original Posting Date",
  "version": "1.0",
  "description": "Shows the original posting date for LinkedIn jobs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": [
        "utils/dateUtils.js",
        "utils/domUtils.js",
        "services/linkedinService.js",
        "services/observerService.js",
        "services/jobProcessor.js"
      ]
    }
  ]
} 